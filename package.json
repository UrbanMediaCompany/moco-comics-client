{
  "name": "@moco-comics/client",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build": "gatsby build",
    "develop": "gatsby develop",
    "start": "yarn develop",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "lint": "eslint . --ignore-path .gitignore",
    "prettier": "prettier . --ignore-path .gitignore",
    "check-format": "yarn prettier --list-different",
    "format": "yarn prettier --write",
    "validate": "yarn check-format && yarn lint && yarn build"
  },
  "dependencies": {
    "@fontsource/assistant": "^4.2.2",
    "@fontsource/luckiest-guy": "^4.2.2",
    "@fontsource/paytone-one": "^4.2.2",
    "autoprefixer": "^10.2.5",
    "gatsby": "^3.1.2",
    "gatsby-plugin-gatsby-cloud": "^2.1.0",
    "gatsby-plugin-image": "^1.1.2",
    "gatsby-plugin-manifest": "^3.1.0",
    "gatsby-plugin-offline": "^4.1.0",
    "gatsby-plugin-postcss": "^4.1.0",
    "gatsby-plugin-react-helmet": "^4.1.0",
    "gatsby-plugin-react-svg": "^3.0.0",
    "gatsby-plugin-sharp": "^3.1.2",
    "gatsby-source-filesystem": "^3.1.0",
    "gatsby-source-strapi": "^1.0.0-alpha.0",
    "gatsby-transformer-sharp": "^3.1.0",
    "postcss": "^8.2.8",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-helmet": "^6.1.0",
    "tailwindcss": "^2.0.4"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-react-app": "^6.0.0",
    "gatsby-plugin-eslint": "^3.0.0",
    "lint-staged": "^10.5.1",
    "prettier": "2.2.1",
    "simple-git-hooks": ">=2.0.3"
  },
  "license": "0BSD",
  "simple-git-hooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.+(js|json|jsx)": [
      "prettier --write",
      "prettier --list-different"
    ],
    "*.(js|jsx)": [
      "eslint"
    ]
  }
}
