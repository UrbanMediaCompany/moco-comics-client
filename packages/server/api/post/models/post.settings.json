{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "url": {
      "type": "uid",
      "required": true
    },
    "content": {
      "type": "richtext"
    },
    "media": {
      "collection": "file",
      "via": "related",
      "allowedTypes": ["images", "videos"],
      "plugin": "upload",
      "required": false
    },
    "comments": {
      "collection": "comment",
      "via": "post"
    },
    "categories": {
      "collection": "category"
    }
  }
}
